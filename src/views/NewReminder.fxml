<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Appointment">
    <children>
      
        <TextField fx:id="nameField" layoutX="199.0" layoutY="106.0" promptText="Name" />
        <TextField fx:id="descriptionField" layoutX="199.0" layoutY="138.0" promptText="Description" />
        <DatePicker fx:id="startDateField" layoutX="199.0" layoutY="210.0" promptText="Date" />
        
        <Text layoutX="199.0" layoutY="95.0" strokeType="OUTSIDE" strokeWidth="0.0" text="New reminder">
            <font>
                <Font size="17.0" />
            </font>
        </Text>
        <Button fx:id="submitBtn" layoutX="199.0" layoutY="349.0" mnemonicParsing="false" onAction="#addReminder" text="Submit" />
      <TextField fx:id="categoryField" layoutX="199.0" layoutY="248.0" promptText="Category" />
      <TextField fx:id="reminderMinutesBefore" layoutX="199.0" layoutY="310.0" promptText="Minutes" />
      <Text layoutX="199.0" layoutY="299.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Reminder before appointment" />
      <Button layoutX="137.0" layoutY="27.0" mnemonicParsing="false" onAction="#NewAppointmentScreen" text="Appointment" />
      <Button layoutX="239.0" layoutY="27.0" mnemonicParsing="false" onAction="#NewReminderScreen" text="Reminder" />
      <Button layoutX="321.0" layoutY="27.0" mnemonicParsing="false" onAction="#NewRecurringScreen" text="Recurring" />
      <TextField fx:id="startTimeField" layoutX="201.0" layoutY="175.0" promptText="Time" />  
  </children>
</AnchorPane>
